<Window x:Class="WpfPluginApp.Views.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPluginApp.Views"
        xmlns:rx="https://reactivapplications.de/RxFramework/WPF"
        mc:Ignorable="d"
        Title="Shell" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>

        <rx:ViewContainer Key="ControlView" Grid.Column="0"/>

        <rx:ViewContainer Key="PageViews" Grid.Column="1">
            <rx:ViewContainer.ContainerPanel>
                <TabControl/>
            </rx:ViewContainer.ContainerPanel>
        </rx:ViewContainer>

    </Grid>
</Window>
